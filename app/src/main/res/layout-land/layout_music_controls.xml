<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/music_roulette_size">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:layout_marginEnd="10dp"
        android:insetLeft="@dimen/music_control_inset"
        android:insetTop="@dimen/music_control_inset"
        android:insetRight="@dimen/music_control_inset"
        android:insetBottom="@dimen/music_control_inset"
        app:icon="@drawable/ic_play_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Kage.Button.Circle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_previous"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:layout_marginEnd="30dp"
        android:insetLeft="@dimen/music_control_inset"
        android:insetTop="@dimen/music_control_inset"
        android:insetRight="@dimen/music_control_inset"
        android:insetBottom="@dimen/music_control_inset"
        app:icon="@drawable/ic_skip_previous"
        app:layout_constraintBottom_toTopOf="@id/btn_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Kage.Button.Circle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:layout_marginEnd="30dp"
        android:insetLeft="@dimen/music_control_inset"
        android:insetTop="@dimen/music_control_inset"
        android:insetRight="@dimen/music_control_inset"
        android:insetBottom="@dimen/music_control_inset"
        app:icon="@drawable/ic_skip_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_play"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Kage.Button.Circle" />

</androidx.constraintlayout.widget.ConstraintLayout>